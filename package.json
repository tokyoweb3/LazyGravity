{
  "name": "lazy-gravity",
  "version": "0.0.1",
  "description": "**LazyGravity** is a local, secure Discord Bot that allows you to remote control and interact with AI coding agents (like Antigravity) running on your home PC from your smartphone's Discord app anywhere.",
  "main": "dist/index.js",
  "bin": {
    "lazy-gravity": "./dist/bin/cli.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "npm run test:unit",
    "test:unit": "jest --testPathIgnorePatterns=tests/e2e.bot.test.ts",
    "test:integration": "jest tests/e2e.bot.test.ts",
    "test:watch": "jest --watch",
    "build": "tsc",
    "start": "ts-node src/index.ts",
    "start:built": "node dist/bin/cli.js",
    "dev": "ts-node-dev --respawn src/index.ts",
    "docs:diagram": "mmdc -i docs/diagrams/architecture.mmd -o docs/images/architecture.svg -b transparent",
    "prepublishOnly": "npm run build && npm run test"
  },
  "keywords": [
    "discord",
    "bot",
    "ai",
    "antigravity",
    "remote-control"
  ],
  "author": "LazyGravity Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/lazy-gravity.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/lazy-gravity/issues"
  },
  "homepage": "https://github.com/yourusername/lazy-gravity#readme",
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "commander": "^14.0.3",
    "discord.js": "^14.25.1",
    "dotenv": "^17.3.1",
    "node-cron": "^4.2.1",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "^11.12.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.3.0",
    "@types/node-cron": "^3.0.11",
    "@types/ws": "^8.18.1",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^28.1.0",
    "minimatch": "^10.2.1",
    "ts-jest": "^29.4.6",
    "ts-morph": "^27.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "undici": "^6.23.0"
  }
}
